<%= form_with(model: vendor) do |form| %>
  <% if vendor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
        <% vendor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name , class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email , class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :mobile, style: "display: block" %>
    <%= form.text_field :mobile , class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date , class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :note, style: "display: block" %>
    <%= form.text_area :note , class:"form-control" %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
